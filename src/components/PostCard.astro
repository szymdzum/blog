---
import FormattedDate from "@components/FormattedDate.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<article>
  <h3 style="margin-bottom: var(--rhythm-quarter);">
    <a href={`/${post.slug}/`} style="text-decoration: none; color: var(--color-text);">
      {post.data.title}
    </a>
  </h3>
  <p style="margin-bottom: var(--space-sm);">{post.data.description}</p>
  <div style="display: flex; gap: var(--space-md); align-items: center; font-size: var(--text-sm); color: var(--color-text-muted);">
    <FormattedDate date={post.data.pubDate} />
    <span aria-hidden="true">•</span>
    <a href={`/${post.slug}/`}>
      Read more →
    </a>
  </div>
</article>
